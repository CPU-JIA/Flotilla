{
  "name": "flotilla",
  "version": "1.0.0",
  "description": "Flotilla - 云端代码托管与协作平台（基于分布式共识算法）",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --filter \"./apps/*\" build",
    "test": "pnpm --filter \"./apps/*\" test",
    "lint": "pnpm --filter \"./apps/*\" lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "monorepo",
    "cloud",
    "development",
    "collaboration"
  ],
  "author": "JIA",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.10.6",
    "axios": "^1.13.1",
    "form-data": "^4.0.4",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "overrides": {
      "glob@>=10.2.0 <10.5.0": ">=10.5.0",
      "glob@>=11.0.0 <11.1.0": ">=11.1.0",
      "glob": ">=11.1.0",
      "validator": ">=13.15.22",
      "html-minifier": "npm:html-minifier-terser@latest",
      "js-yaml": ">=4.1.1",
      "nodemailer": ">=7.0.11",
      "dompurify": ">=3.2.4",
      "tar": ">=7.5.2",
      "mdast-util-to-hast": ">=13.2.1",
      "next": ">=15.5.7"
    }
  }
}
