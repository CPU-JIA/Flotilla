# Database
DATABASE_URL="postgresql://devplatform:devplatform123@localhost:5434/cloud_dev_platform"
DATABASE_REPLICA_URL="postgresql://devplatform:devplatform123@localhost:5435/cloud_dev_platform"

# Redis
REDIS_URL="redis://:redis123@localhost:6380"

# MinIO (S3-compatible)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_USE_SSL="false"
MINIO_BUCKET_NAME="cloud-dev-platform"

# MeiliSearch Configuration
MEILI_HOST="http://localhost:7700"
MEILI_MASTER_KEY="flotilla-search-master-key-min-16-chars-2025"
MEILI_INDEX_PREFIX="flotilla_"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRATION="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_REFRESH_EXPIRATION="30d"

# Email Configuration (SMTP)
# Brevo (recommended for free 9000 emails/month)
# Sign up at: https://www.brevo.com/
# Get SMTP credentials from: Settings > SMTP & API > SMTP
SMTP_HOST="smtp-relay.brevo.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@example.com"
SMTP_PASS="your-brevo-api-key"
SMTP_FROM_EMAIL="noreply@flotilla.dev"

# Alternative SMTP Providers (choose one):
# Gmail: smtp.gmail.com:587 (requires app password)
# Outlook: smtp-mail.outlook.com:587
# Custom SMTP: your-server.com:587

# Application
NODE_ENV="development"
PORT="4000"
FRONTEND_URL="http://localhost:3000"

# Git Repository Storage
# Path where Git repositories are stored
# Default: {cwd}/repos (apps/backend/repos/ in development)
# Production: Set to a persistent directory like /var/lib/flotilla/repos
# ⚠️ IMPORTANT: Never use os.tmpdir() in production - data may be lost on system cleanup
GIT_STORAGE_PATH=""

# Raft Configuration
RAFT_NODE_ID="node1"
RAFT_CLUSTER_NODES="node1:4000,node2:4001,node3:4002"
RAFT_ELECTION_TIMEOUT_MIN="150"
RAFT_ELECTION_TIMEOUT_MAX="300"
RAFT_HEARTBEAT_INTERVAL="50"
# Bootstrap Admin (初始管理员)
# If set, user registering with this email will automatically become SUPER_ADMIN
# If not set, the first registered user will automatically become SUPER_ADMIN
# 如果设置，使用此邮箱注册的用户将自动成为超级管理员
# 如果未设置，第一个注册的用户将自动成为超级管理员
INITIAL_ADMIN_EMAIL=""
